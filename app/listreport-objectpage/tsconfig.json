{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "rootDir": "../../",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "sap/fe/showcase/lrop/*": ["./webapp/*"],
      "#cds-models/*": ["../../@cds-models/*/index.ts"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@sapui5/types",
      "../../node_modules/@types",
      "../../node_modules/@sapui5/types"
    ]
  },
  "include": ["./webapp/**/*"],
  "exclude": ["node_modules/**"]
}
