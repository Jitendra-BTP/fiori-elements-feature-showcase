{
  "authenticationMethod": "route",
  "routes": [
    {
      "source": "^/?srv1/(.*)$",
      "target": "/srv1/$1",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "csrfProtection": true
    },
    {
      "source": "^(.*)$",
      "target": "$1",
      "service": "html5-apps-repo-rt",
      "authenticationType": "xsuaa"
    }
  ]
}
